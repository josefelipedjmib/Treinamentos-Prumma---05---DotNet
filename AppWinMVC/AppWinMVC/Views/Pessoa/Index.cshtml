@{
    ViewBag.Title = "Pessoa";
}
<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>
    @Html.ActionLink("Criar Pessoa", "Criar", "Pessoa", new { area = "" }, new { @class = "nav-link" })
    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var pessoa in Model)
            {
                <li>@pessoa.Nome</li>
            }
        </ul>
    }
</main>
